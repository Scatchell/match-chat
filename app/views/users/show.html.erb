<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_sign_in_at) %>:</strong></dt>
  <dd><%= none_if_empty(@user.current_sign_in_at) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_sign_in_at) %>:</strong></dt>
  <dd><%= none_if_empty(@user.last_sign_in_at) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chatroom_id) %>:</strong></dt>
  <dd><%= none_if_empty(@user.chatroom_id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:heartbeat_id) %>:</strong></dt>
  <dd><%= none_if_empty(@user.heartbeat_id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:minutes) %>:</strong></dt>
  <dd><%= @user.minutes %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn' %>
  <% #todo enable deletion of user? %>
  <% #link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
</div>
